{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "default": {
            "()": "uvicorn.logging.DefaultFormatter",
            "fmt": "%(asctime)s %(levelprefix)s %(message)s",
            "use_colors": null
        },
        "access": {
            "()": "uvicorn.logging.AccessFormatter",
            "fmt": "%(asctime)s %(levelprefix)s %(client_addr)s - \"%(request_line)s\" %(status_code)s"
        }
    },
    "handlers": {
        "default": {
            "formatter": "default",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stderr"
        },
        "access": {
            "formatter": "access",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        },
        "file_default": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "default",
            "filename": "{{LOG_PATH}}/default.log",
            "maxBytes": 10485760,
            "backupCount": 20
        },
        "file_error": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "default",
            "filename": "{{LOG_PATH}}/error.log",
            "maxBytes": 10485760,
            "backupCount": 20
        },
        "file_access": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "access",
            "filename": "{{LOG_PATH}}/access.log",
            "maxBytes": 10485760,
            "backupCount": 20
        }
    },
    "loggers": {
        "uvicorn": {
            "handlers": ["default", "file_default"],
            "level": "INFO",
            "propagate": false
        },
        "uvicorn.error": {
            "handlers": ["default", "file_error"],
            "level": "INFO"
        },
        "uvicorn.access": {
            "handlers": ["access", "file_access"],
            "level": "INFO",
            "propagate": false
        }
    }
}